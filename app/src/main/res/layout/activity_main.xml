<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:gyjmoble="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <!--android:background="#04F">-->

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimary">

    </android.support.v7.widget.Toolbar>

    <TextView
        android:id="@+id/text0"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_gravity="center"
        android:layout_alignParentStart="true"
        android:layout_marginTop="5dp"
        android:layout_marginStart="5dp"
        android:text="PRINTED IC LAB">

    </TextView>

    <TextView
        android:id="@+id/text1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/toolbar"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="5dp"
        android:text="NFC SENSOR TOOL " />

    <LinearLayout
        android:id="@+id/ll_commercial_load"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/text1"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:weightSum="2">

        <Button
            android:id="@+id/B_thermistor_C"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="13dp"
            android:layout_weight="1.5"
            android:background="@color/colorPrimary"
            android:layout_marginEnd="10dp"
            android:paddingStart="5dp"
            android:text="@string/thermistor_C" />


        <Button
            android:id="@+id/B_load_commercial"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:textColor="@color/colorAccent"
            android:textSize="13dp"
            android:paddingEnd="5dp"
            android:layout_weight="0.5"
            android:layout_marginStart="10dp"
            android:background="@color/colorPrimary"
            android:text="Load" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_printed_load"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_commercial_load"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:weightSum="2">

        <Button
            android:id="@+id/B_thermistor_P"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textColor="@color/colorAccent"
            android:textSize="13dp"
            android:paddingStart="5dp"
            android:layout_weight="1.5"
            android:background="@color/colorPrimary"
            android:layout_marginEnd="10dp"
            android:text="@string/thermistor_P" />

        <Button
            android:id="@+id/B_load_printed"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:textColor="@color/colorAccent"
            android:textSize="13dp"
            android:paddingEnd="5dp"
            android:layout_weight="0.5"
            android:layout_marginStart="10dp"
            android:background="@color/colorPrimary"
            android:text="Load" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_pVSc_load"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_printed_load"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:weightSum="2">

        <Button
            android:id="@+id/B_Compare"
            android:layout_width="0dp"
            android:layout_height="wrap_content"

            android:textColor="@color/colorAccent"
            android:textSize="13dp"
            android:paddingStart="5dp"
            android:layout_weight="1.5"
            android:background="@color/colorPrimary"
            android:layout_marginEnd="10dp"
            android:text="P VS Comm. Therm." />

        <Button
            android:id="@+id/B_load_pVSc"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:textColor="@color/colorAccent"
            android:paddingEnd="5dp"
            android:textSize="13dp"
            android:layout_weight="0.5"
            android:layout_marginStart="10dp"
            android:background="@color/colorPrimary"
            android:text="Load" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_legacy_load"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_pVSc_load"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:weightSum="2">

        <Button
            android:id="@+id/B_thermistor_L"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:textColor="@color/colorAccent"
            android:paddingStart="5dp"
            android:textSize="13dp"
            android:layout_weight="1.5"
            android:background="@color/colorPrimary"
            android:layout_marginEnd="10dp"
            android:text="@string/thermistor_L" />

        <Button
            android:id="@+id/B_loadLegacy"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:textColor="@color/colorAccent"
            android:paddingEnd="5dp"
            android:textSize="13dp"
            android:layout_weight="0.5"
            android:layout_marginStart="10dp"
            android:background="@color/colorPrimary"
            android:text="Load" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_FII_load"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_legacy_load"
        android:orientation="horizontal"
        android:paddingTop="5dp"
        android:weightSum="2">

        <Button
            android:id="@+id/B_hexDecode"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:textColor="@color/colorAccent"
            android:paddingStart="5dp"
            android:textSize="13dp"
            android:layout_weight="1.5"
            android:background="@color/colorPrimary"
            android:layout_marginEnd="10dp"
            android:text="FIRMWARE V2.0">
        </Button>

        <Button
            android:id="@+id/B_loadHex"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:layout_marginStart="10dp"
            android:layout_weight="0.5"
            android:background="@color/colorPrimary"
            android:paddingEnd="5dp"
            android:text="Load"
            android:textColor="@color/colorAccent"
            android:textSize="13dp" />

    </LinearLayout>

    <Button
        android:id="@+id/B_normal_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_FII_load"
        android:textColor="@color/colorAccent"
        android:textSize="13dp"
        android:layout_gravity="center"
        android:background="@color/colorPrimary"
        android:layout_marginTop="15dp"
        android:text="Normal Read" />

    <Button
        android:id="@+id/B_thermistor_I"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/B_normal_tag"
        android:layout_gravity="center"
        android:textColor="@color/colorAccent"
        android:textSize="13dp"
        android:background="@color/colorPrimary"
        android:layout_marginTop="5dp"
        android:enabled="false"
        android:text="@string/thermistor_I" />


</RelativeLayout>
